
@{
    ViewBag.Title = "Crear una Pizza";
}
<md-content layout="row" layout-align="space-around" layout-padding="layout-padding" ng-cloak="ng-cloak" class="login-form">
    <md-card flex="flex" flex-gt-sm="50" flex-gt-md="45">
        <h2>@ViewBag.Title</h2>
        <md-card-content layout-padding>
            <form id="CreaePizzaForm" action="/" method="post" enctype="multipart/form-data">
                <div layout-gt-xs="row">
                    <md-input-container class="md-block" flex-gt-xs>
                        <label>Nombre</label>
                        <input required name="pizzaname" type="text">
                    </md-input-container>
                    <md-input-container class="md-block" flex-gt-xs>
                        <md-select ng-model="pizza" placeholder="Ingredientes">
                            <md-option value="Tomate">Tomate</md-option>
                            <md-option value="Queso">Queso</md-option>
                            <md-option value="Especial">Especial del Patrón</md-option>
                        </md-select>
                    </md-input-container>
                    <md-container class="md-block md-primary" flex-gt-xs>
                        <md-button class="md-raised md-warn md-button" type="file" ng-model="pizza.upload.img" ng-required="true" name="img" ngf-max-size="5MB" ngf-resize="{width: 300, height: 300}">
                            Subir Imagen
                        </md-button>
                        <label class="md-subhead">{{$pizza.upload.img.$ngfName}}</label>
                    </md-container>
                    <md-container class="md-block" flex-gt-xs>
                        <label>Preview: </label>
                        <img src="http://3.bp.blogspot.com/_f5VsKh2clCE/Suo5agPg10I/AAAAAAAAAHk/BSYd3tgSSHo/s320/loading.gif" id="preview" />
                    </md-container><br /><br />
                    <md-container class="layout-align-end-center" flex-gt-xs>
                        <md-button type="submit" class="md-raised md-primary" ng-model="pizza.upload">Crear Pizza</md-button>
                    </md-container>
                </div>
            </form>
        </md-card-content>
    </md-card>
</md-content>
